<div class="container" id="body">
<h1>Eat-Da-Burger App</h1>
<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/update?" method="PUT">
                <button type="submit" class="burgerAvailable">{{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="burgerEaten">
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Insert Burger</h2>

<div class="row">
  <div class="col s12">
    <form class="create-form" action="/burgers/create" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Burger">
      <button type="submit" class="addBurgerButton">Insert</button>
    </form>
  </div>
</div>
</body>
</div>