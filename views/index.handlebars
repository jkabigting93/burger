<div class="header-text">
  <div class="container">
    <h2 class="display-3">Look at These Burgers</h2>
  </div>
</div>

<div class="container">
  <div class="row pt-2">
    <div class="col-lg-6">
      {{#each burgers}}
        {{#unless devoured}}
          <div class="card mt-3">
            <div class="card-body">
              <h2>{{burger_name}}</h2>
              <button type="button" class="btn btn-dark eat-burger" data-id="{{this.id}}">Devour it!</button>
            </div>
          </div>            
        {{/unless}}
      {{/each}}
    </div>

    <div class="col-lg-6">
      <h3>These burgers have been devoured:</h3>
      {{#each burgers}}
        {{#if devoured}}
          <div class="card mt-3">
            <div class="card-body">
              <h2>{{burger_name}}</h2>
            </div>
          </div>            
        {{/if}}
      {{/each}}
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <div class="card ">
        <div class="card-body">
          <h2>Insert Burger</h2>
          <form class="create-form">
            <div class="form-group">
              <label for="ca">Burger Name:</label>
              <input type="text" id="ca" name="name" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Insert</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>